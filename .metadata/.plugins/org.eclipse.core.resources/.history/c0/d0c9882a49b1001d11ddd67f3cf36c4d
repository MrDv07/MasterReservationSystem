package com.axis.Config;

import java.util.List;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestBody;

import com.axis.Entity.Train;

@FeignClient(name = "Train-Service", url = "http://localhost:9092")
public interface TrainServiceFeign {
    
    @GetMapping("/train/byName")
    Train findByTrainName(@RequestBody String trainName);

    @GetMapping("/train/bySourceAndDestination")
    List<Train> findBySourceAndDestination(@RequestBody String source,String destination);

}

	
	
	
	
	

}
